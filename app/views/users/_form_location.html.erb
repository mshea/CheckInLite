<h2>Add a Location:</h2><%= form_for([@user, @user.locations.build]) do |f| %>  <div class="field">    <%= f.label :name %><br />    <%= f.text_field :name %>  </div>  <div class="field">    <%= f.label :address %><br />    <%= f.text_field :address %>  </div>  <div class="field">    <%= f.label :contact_info %><br />    <%= f.text_field :contact_info %>  </div>  <div class="actions">    <%= f.submit %>  </div><% end %>