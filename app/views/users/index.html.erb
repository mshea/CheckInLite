<h1>Listing users</h1>

<table border="1" cellpadding="5">
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Contact Info</th>
	<th>Check In Time</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>
	<%= if user.id == session[:user_id] 
		link_to user.name, user
	else 
		user.name
	end 
	%></td>
	<% if user.locations.exists? %>
	<td><a href="javascript:void(0)" onclick="findLocation('<%= user.locations.first.address %>');return false;"><%= user.locations.first.name %></a></td>
	<td><%= user.locations.first.contact_info %></td>
	<td><%= user.locations.first.updated_at.strftime('%l:%M %p, %d %b %Y') %></td>
    <% else %>
	<td></td>
	<td></td>
	<td></td>
	<% end %>
  </tr>
<% end %>
</table>
<br><br>
<form action="#" onsubmit="showLocation(); return false;"> 
        <input type="hidden" name="q" value="" class="address_input" size="40" /> 
        <input type="hidden" name="find" value="Search" /> 
    </form> 
<div id="map_canvas" style="width: 500px; height: 300px"></div> 